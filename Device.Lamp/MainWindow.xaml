<Window x:Class="Device.Lamp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Device.Lamp.Views"
        Title="Iot Device"
        Width="375" Height="667"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="White"
            CornerRadius="30"
            SnapsToDevicePixels="True">

        <Grid>
            <Border Name="TopBar"
            Height="40"
            Background="Transparent"
            MouseLeftButtonDown="TopBar_MouseLeftButtonDown"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            CornerRadius="30,30,0,0">
            </Border>

            <Button Style="{StaticResource powerButton}"
            Click="Close_Click"
            Width="40"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10">
            </Button>

            <DockPanel Margin="0,50,0,0">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
                    <Button Content="Lampa"
                        Click="ShowLamp"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#FFC1CC"
                        Foreground="White">
                    </Button>
                    <Button Content="Inställningar"
                        Click="ShowSettings"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#AEECEF"
                        Foreground="White">
                    </Button>
                </StackPanel>
                <ContentControl x:Name="ContentRegion"/>
            </DockPanel>
        </Grid>
    </Border>
</Window>
